        <Button x:Name="btnCancelarActivarUsuarioAdmin" Content="Cancelar" Margin="868,245,-14,0" Background="#FF058789" FontFamily="Times New Roman" FontWeight="Bold" FontSize="10" Height="32" VerticalAlignment="Top" MouseEnter="btnCancelarActivarUsuarioAdmin_MouseEnter" MouseLeave="btnCancelarActivarUsuarioAdmin_MouseLeave" Click="btnCancelarActivarUsuarioAdmin_Click"/>
        <Label Content="Nombre del Usuario:" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Margin="248,112,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtNombreUsuarioInactivoAdmin" TextAlignment="Center" Background="LightGray" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Height="27" Margin="186,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
        <Label Content="Correo:" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Margin="596,112,0,0" VerticalAlignment="Top"/>
