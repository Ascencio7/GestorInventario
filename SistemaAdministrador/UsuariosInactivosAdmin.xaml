        <Label Content="Contraseña:" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Margin="111,197,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtContraUsuarioInactivoAdmin" TextAlignment="Center" HorizontalAlignment="Left" Height="21" Margin="43,234,0,0" TextWrapping="Wrap" Background="LightGray" FontFamily="Times New Roman" FontSize="15" VerticalAlignment="Top" Width="216"/>
        <Label Content="Rol:" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Margin="371,199,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtRolUsuarioInactivoAdmin" TextAlignment="Center" HorizontalAlignment="Left" Height="21" Margin="304,234,0,0" TextWrapping="Wrap" Background="LightGray" FontFamily="Times New Roman" FontSize="15" VerticalAlignment="Top" Width="168"/>
        <Label Content="Estado:" FontFamily="Times New Roman" FontSize="15" HorizontalAlignment="Left" Margin="597,199,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtEstadoUsuarioInactivoAdmin" TextAlignment="Center" HorizontalAlignment="Left" Height="21" Margin="545,232,0,0" TextWrapping="Wrap" Background="LightGray" FontFamily="Times New Roman" FontSize="15" VerticalAlignment="Top" Width="139"/>

    </Grid>
</Window>
